<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@drawable/gradient"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="MENU"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.058" />

    <ImageView
        android:id="@+id/imgIngresarBolis"
        android:layout_width="154dp"
        android:layout_height="147dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.132"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.196"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imgVerBolis"
        android:layout_width="154dp"
        android:layout_height="145dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.637"
        app:layout_constraintStart_toEndOf="@+id/imgIngresarBolis"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.199"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imgIngresarVentas"
        android:layout_width="150dp"
        android:layout_height="154dp"
        android:layout_marginStart="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgIngresarBolis"
        app:layout_constraintVertical_bias="0.501"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/imgVerVentas"
        android:layout_width="150dp"
        android:layout_height="144dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.591"
        app:layout_constraintStart_toEndOf="@+id/imgIngresarVentas"
        app:layout_constraintTop_toBottomOf="@+id/imgVerBolis"
        app:layout_constraintVertical_bias="0.516"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnAddBolis"
        android:layout_width="153dp"
        android:layout_height="56dp"
        android:layout_marginStart="44dp"
        android:text="Agregar Bolis"
        app:layout_constraintBottom_toTopOf="@+id/imgIngresarVentas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgIngresarBolis"
        app:layout_constraintVertical_bias="0.509" />

    <Button
        android:id="@+id/btnViewBolis"
        android:layout_width="134dp"
        android:layout_height="60dp"
        android:text="Ver Bolis"
        app:layout_constraintBottom_toTopOf="@+id/imgVerVentas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.687"
        app:layout_constraintStart_toEndOf="@+id/btnAddBolis"
        app:layout_constraintTop_toBottomOf="@+id/imgVerBolis"
        app:layout_constraintVertical_bias="0.444" />

    <Button
        android:id="@+id/btnAddVentas"
        android:layout_width="148dp"
        android:layout_height="61dp"
        android:layout_marginStart="44dp"
        android:text="Añadir Venta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgIngresarVentas"
        app:layout_constraintVertical_bias="0.333" />

    <Button
        android:id="@+id/btnViewVentas"
        android:layout_width="141dp"
        android:layout_height="61dp"
        android:text="Ver Ventas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.577"
        app:layout_constraintStart_toEndOf="@+id/btnAddVentas"
        app:layout_constraintTop_toBottomOf="@+id/imgVerVentas"
        app:layout_constraintVertical_bias="0.333" />

</androidx.constraintlayout.widget.ConstraintLayout>